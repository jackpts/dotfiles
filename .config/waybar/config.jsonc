{
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 4,
  "modules-left": [
    "custom/appmenu",
    "custom/updates",
    "custom/weather",
    "wlr/taskbar",
    "hyprland/workspaces"
  ],
  // "modules-center": ["hyprland/workspaces", "clock"],
  "modules-right": [
    "mpd",
    "pulseaudio",
    "backlight",
    "network",
    "bluetooth",
    "custom/home-free-space",
    "temperature",
    "temperature#gpu",
    "cpu",
    "memory",
    "battery",
    "custom/copyq",
    "hyprland/language",
    "clock",
    // "tray",
    "custom/power"
  ],
  "custom/appmenu": {
    // "format": "Menu {icon}",
    // "format": "⬡ Menu",
    "format": "󰣇 ",
    "tooltip-format": "Menu/Lock",
    // "format-icon": "󰻀",
    // "rotate": 0,
    "on-click": "$HOME/.config/waybar/run_launcher.sh",
    "on-double-click": "hyprsysteminfo",
    "on-click-right": "$HOME/.config/hypr/lock_with_matrix.sh"
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "tooltip": true,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "active-first": true
  },
  "hyprland/workspaces": {
    // "format": "{name} : {icon}",
    "format": "{name}",
    // "format-icons": {
    //   "1": "",
    //   "2": "",
    //   "3": "",
    //   "4": "",
    //   "5": "",
    //   "active": "",
    //   "default": ""
    // },
    // "persistent-workspaces": {
    //   "Virtual-1": [1, 2, 3, 4, 5]
    // }
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-click": "activate",
    "persistent_workspaces": {
      "*": 1
    }
  },
  "clock": {
    // "format": "{:%I:%M %p}",
    // "format": "{:%a, %d %b  %H:%M}",
    "format": "{:%H:%M, %d %b}",
    "rotate": 0,
    // "format-alt": "{  %d·%m·%y}",
    // "format-alt": "{:%a, %d. %b  %H:%M}",
    // "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "calendar": {
      "mode": "month",
      "format": {
        "months": "<span color='#ff6699'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'><b>{}</b></span>",
        "weekdays": "<span color='#7CD37C'><b>{}</b></span>",
        "today": "<span color='#ffcc66'><b>{}</b></span>"
      }
    },
    "on-click": "gnome-calendar",
    "interval": 60,
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    // "format": "{icon0} {icon1} {icon2} {icon3}",
    // "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"]
    "format": "{usage}% ",
    "tooltip": false,
    "on-click": "kitty -e htop"
  },
  "custom/home-free-space": {
    "exec": "$HOME/scripts/home_free_space.sh",
    "interval": 180,
    "return-type": "json",
    "tooltip-format": "<tt>Home free space: {}</tt>",
    "on-click": "kitty -e sh -c 'duf --hide loops,special; read -p \"Press Enter\"'"
  },
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}°C {icon}",
    "format": "{temperatureC}°C {icon}",
    "format-icons": ["", "", ""],
    "tooltip": false,
    "on-click": "kitty -e btop"
  },
  "temperature#gpu": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon5/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}°C {icon}",
    "format": "{temperatureC}°C {icon}",
    "format-icons": ["", "\udb80\udf79", ""],
    "on-click": "gpustat"
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""],
    "tooltip": false
  },
  "memory": {
    "format": "{}% "
  },
  "network": {
    "tooltip": true,
    "rotate": 0,
    // "format": "{ifname}",
    "format": "{ip} | {public_ip}",
    "public_ip": "curl -s ifconfig.me",
    // "format-ethernet": " ",
    "format-ethernet": "{ipaddr}/{cidr} ",
    // "format-wifi": "{essid} ({signalStrength}%) ",
    "format-wifi": "{signalStrength}% ",
    "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: {ipaddr}\n",
    "format-linked": " {ifname} (No IP)",
    "format-connected": "{ip} | {public_ip}",
    "format-disconnected": "󰖪 ",
    "tooltip-format-disconnected": "Disconnected",
    // "format-alt": "<span foreground='#99ffdd'> {bandwidthDownBytes}</span> <span foreground='#ffcc66'> {bandwidthUpBytes}</span>",
    "format-alt": "{ipaddr}",
    "interval": 5,
    "on-click": "kitty -e nmtui",
    "on-click-middle": "nmcli r wifi off | nmcli r wifi on"
  },
  // "keyboard-state": {
  //   "numlock": true,
  //   "capslock": true,
  //   "format": "{name} {icon}",
  //   "format-icons": {
  //     "locked": "",
  //     "unlocked": ""
  //   }
  // },
  "mpd": {
    // "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ⸨{songPosition}|{queueLength}⸩ {volume}% ",
    "format": "{stateIcon}  {consumeIcon}{repeatIcon}{singleIcon}{artist} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) [{songPosition}|{queueLength}] {volume}%",
    "format-disconnected": "Disconnected ",
    // "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ",
    "format-stopped": "{consumeIcon}{singleIcon}Stopped ",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": " "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\"></span> ",
      "on": " "
    },
    "repeat-icons": {
      "on": " "
    },
    "single-icons": {
      "on": "1 "
    },
    "state-icons": {
      "paused": "",
      "playing": ""
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
    "on-click": "mpc toggle",
    "on-scroll-up": "mpc next",
    "on-scroll-down": "mpc prev",
    "font": "monospace 12"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "  {volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "on-click": "pavucontrol"
    // "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle"
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["", "", "", "", ""]
  },
  // "tray": {
  //   "icon-size": 18,
  //   "spacing": 7
  // },
  "custom/power": {
    "format": "⏻ ",
    "return-type": "json",
    "on-click": "$HOME/.config/waybar/power_menu.sh",
    "interval": 60,
    "tooltip": false
  },
  "custom/updates": {
    "exec": "$HOME/.config/waybar/check_updates.sh",
    "return-type": "json",
    "interval": 300,
    "on-click": "kitty -e arch-update"
    // "on-click": "alacritty -e yay && sleep 3 && notify-send 'Update complete' && $HOME/.config/waybar/check_updates.sh"
  },
  "custom/copyq": {
    "format": "  ",
    "on-click": "copyq show",
    "interval": 1,
    "tooltip": false
  },
  "hyprland/language": {
    // "on-click": "hyprctl switchxkbdlayout 611884009480 next",
    "format": "{}",
    "format-en": "US",
    "format-ru": "RU"
    // "keyboard-name": "ite-tech.-inc.-ite-device(8910)-keyboard"
  },
  "bluetooth": {
    "format": " {status}",
    "format-disabled": " Off",
    "format-connected": " {num_connections}",
    // "format-connected-battery": "{icon} {num_connections}",
    "format-connected-battery": " {device_battery_percentage}%",
    "format-icons": {
      "connected": "🔵",
      "disconnected": "⚪",
      "disabled": "❌"
    },
    "tooltip": true,
    // "tooltip-format": "{name}: {battery}%",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": "{controller_alias}\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{icon} {device_battery_percentage}%",
    "on-click": "blueman-manager",
    "on-scroll-up": "bluetoothctl connect {mac_address}",
    "on-scroll-down": "bluetoothctl disconnect {mac_address}",
    "battery": "bluetoothctl info {mac_address} | grep 'Battery Percentage:' | awk '{print $3}' || echo 'N/A'",
    "disabled": {
      "format": "Bluetooth Disabled",
      "icon": "❌"
    },
    "scroll-step": 1
  },
  "custom/weather": {
    "exec": "$HOME/scripts/weather.sh",
    "return-type": "json",
    "interval": 600,
    "on-click": "kitty -e sh -c 'curl -s \"https://wttr.in/?T\"; read -p \"Press Enter\"'"
  }
}
